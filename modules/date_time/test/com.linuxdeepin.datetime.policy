<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">

<policyconfig>
  <vendor>Linux Deepin</vendor>
  <vendor_url>http://www.linuxdeepin.com/</vendor_url>
  <icon_name>deepin</icon_name>

  <action id="com.linuxdeepin.datetime.configure">
    <_description>Change system time and date settings</_description>
    <_message>To change time or date settings, you need to authenticate.</_message>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>

</policyconfig>
